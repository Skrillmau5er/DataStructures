@{
    ViewBag.Title = "Dictionary";
}
<head>
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" type="text/css" href="../../Content/Custom.css">
</head>
<h2>Dictionary</h2>
<!-- Sidebar -->
<div class="row">
    <div class="col-sm-6 w3-sidebar w3-light-grey w3-bar-block" style="width:25%">
            <h3 class="w3-bar-item">Menu</h3>
            <a href="@Url.Action("AddOne" , "Dictionary")" class="w3-bar-item w3-button">Add one time to dictionary</a>
            <a href="@Url.Action("AddBunch" , "Dictionary")" class="w3-bar-item w3-button">Add huge list of items to dictionary</a>
            <a href="@Url.Action("Display" , "Dictionary")" class="w3-bar-item w3-button">Display dictionary</a>
            <a href="@Url.Action("Delete" , "Dictionary")" class="w3-bar-item w3-button">Delete from dictionary</a>
            <a href="@Url.Action("Clear" , "Dictionary")" class="w3-bar-item w3-button">Clear dictionary</a>
            <a href="@Url.Action("Search" , "Dictionary")" class="w3-bar-item w3-button">Search dictionary</a>
            <a href="@Url.Action("Index" , "Home")" class="w3-bar-item w3-button">Return to main menu</a>
    </div>
    <div class="col-sm-6" id="answer">
        <p>
            @Html.Raw((String)ViewBag.Search)
            @Html.Raw((String)ViewBag.Output)
            @Html.Raw((String)ViewBag.StopWatch)
        </p>
    </div>

    

